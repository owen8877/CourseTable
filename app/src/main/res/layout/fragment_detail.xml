<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_detail_datelayout_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:layout_alignParentStart="true"
            android:text="23"/>

        <TextView
            android:id="@+id/fragment_detail_datelayout_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_toEndOf="@id/fragment_detail_datelayout_day"
            android:text="Thursday"/>

        <TextView
            android:id="@+id/fragment_detail_datelayout_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_toEndOf="@id/fragment_detail_datelayout_day"
            android:layout_alignBottom="@id/fragment_detail_datelayout_day"
            android:text="日 4月"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/debug_button_1"/>

    <ListView
        android:id="@+id/fragment_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>